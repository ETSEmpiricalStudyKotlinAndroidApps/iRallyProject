<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.upenn.cis350.irally">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.location.LocationActivity"></activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.register.RegisterActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.event.CreateEventActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.profile.ProfilePicture"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.event.EventPageActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.profile.UserActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.search.SearchActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.profile.AdminActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.feed.FeedActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".data.LocationManagerActivity"
            android:label="@string/app_name" />
    </application>

</manifest>