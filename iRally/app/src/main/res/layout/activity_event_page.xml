<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints">

        <TextView android:id="@+id/event_page_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/filler_event_page"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />

        <TextView android:id="@+id/event_page_creator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="start"
            android:text="@string/event_created_by_filler_creator"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView android:id="@+id/event_page_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="start"
            android:text="@string/event_description"
            android:textStyle="bold|italic"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

        <TextView android:id="@+id/event_page_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/event_address_address"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView android:id="@+id/event_page_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/event_date_and_time"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/event_page_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="@string/mark_as_going" />

        <TextView
            android:id="@+id/event_page_attendees_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="start"
            android:text="@string/attendees"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/attendees_layout"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textSize="8sp">

            <Button
                android:id="@+id/attendee1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="@string/no_attendees_yet"
                android:textSize="8sp"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
