<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints">


        <TextView android:id="@+id/event_page_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="FILLER EVENT PAGE"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24dp"/>

        <TextView android:id="@+id/event_page_creator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Event created by: Filler creator"
            android:gravity="left"
            android:textColor="@color/white"
            android:textSize="24dp"/>


        <TextView android:id="@+id/event_page_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="event description"
            android:gravity="left"
            android:textStyle="bold|italic"
            android:textColor="@color/colorAccent"
            android:textSize="24dp"/>


        <TextView android:id="@+id/event_page_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="event address: address"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24dp"/>

        <TextView android:id="@+id/event_page_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="event date and time"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24dp"/>


        <Button
            android:id="@+id/event_page_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="Mark as going"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
